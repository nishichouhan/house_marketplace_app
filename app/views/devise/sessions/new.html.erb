<div class="flex justify-center items-center w-screen h-screen lg:px-4">
<div class="w-1/2 lg:block hidden">
  <%= image_tag 'login.png', class: 'px-10' %>
</div>

<div class="lg:w-screen w-1/2 flex justify-center">
<div class="flex items-center flex-col lg:p-8 p-2 rounded-xl bg-gray-200">
<h2 class='text-center text-2xl text-blue-400 font-semibold'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-2">
    <%= f.label :email, class: 'text-xl' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-gray-300 outline-none text-xl pl-2 lg:w-92 md:w-80 w-72' %>
  </div>

  <div class="field mb-2">
    <%= f.label :password, class: 'text-xl' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'border border-gray-300 outline-none text-xl pl-2 lg:w-92 md:w-80 w-72' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me, class:"w-8" %>
      <%= f.label :remember_me, class: 'text-lg' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'bg-green-600 py-2 px-4 rounded-md text-white cursor-pointer' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>